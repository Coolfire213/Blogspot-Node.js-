<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        <div class="table-responsive">
        <table class="table">
            {{#each categories}}
            <tr>
                    <th>Category ID</th>
                    <th>Category name</th>
                </tr>
            <tr>
                <td>{{id}}</td>
                <td>{{category}}</td>
                <td><a href="/categories/delete/{{id}}" class="btn btn-danger">remove</a></td>
            </tr>
            {{/each}}
        </table>
        </div>
    </div>
    {{#unless posts}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
    {{/unless}}
</div>